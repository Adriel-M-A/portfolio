---
/* Componente para mostrar los enlaces a redes sociales */
const socialLinks = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/adriel-agustin-montes-66460b202/",
  },
  {
    name: "GitHub",
    url: "https://github.com/Adriel-M-A",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/tu-usuario",
  },
];
---

<div class="flex gap-4">
  {
    socialLinks.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={link.name}
        class="text-gray-500 hover:text-indigo-600 transition-colors"
      >
        {link.name}
      </a>
    ))
  }
</div>
